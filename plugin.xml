<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="happie-plugin-cordova-raygun"
        version="1.0.0">
    <name>RaygunPlugin</name>
    <description>Cordova Raygun Plugin for native iOS and Android SDKs</description>
    <license>MIT</license>
    <keywords>cordova,raygun,ios,android,ecosystem:cordova</keywords>
    <js-module src="www/RaygunNativePlugin.js" name="RaygunNativePlugin">
        <clobbers target="RaygunNativePlugin"/>
    </js-module>
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="RaygunNativePlugin">
                <param name="android-package" value="io.happie.raygun.RaygunNativePlugin"/>
            </feature>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="application">
            <service   android:name="main.java.com.mindscapehq.android.raygun4android.RaygunPostService"
                       android:exported="false"
                       android:process=":raygunpostservice"/>
            <meta-data android:name="com.mindscapehq.android.raygun4android.apikey"
                       android:value="RAYGUN_API_KEY" />
        </config-file>
        <source-file src="src/android/RaygunNativePlugin.java" target-dir="src/io/happie/raygun"/>
        <source-file src="src/android/raygun4android-1.3.0.jar" target-dir="libs" />
    </platform>
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="CrashlyticsPlugin">
                <param name="ios-package" value="CrashlyticsPlugin"/>
            </feature>
        </config-file>
        <header-file src="src/ios/CrashlyticsPlugin.h"/>
        <source-file src="src/ios/CrashlyticsPlugin.m"/>
        <framework src="src/ios/Crashlytics.framework" custom="true"/>
        <framework src="src/ios/Fabric.framework" custom="true"/>
        <framework src="Security.framework"/>
        <framework src="libc++.dylib"/>
        <framework src="libz.dylib"/>
    </platform>
</plugin>